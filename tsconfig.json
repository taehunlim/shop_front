{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "isolatedModules": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": true,
    "allowJs": false,
    "skipLibCheck": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true
  },
  "typeRoots": [
    "node_modules/@types",
    "src/@types"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "src"
  ]
}